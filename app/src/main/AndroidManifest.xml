<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pharogrammer.fedora.damanhour.homiversity">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".root.App"
        android:allowBackup="true"
        android:icon="@mipmap/homiversity"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".mvp.view.activity.MainActivity" android:theme="@style/NoActionBarStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mvp.view.activity.ContainerActivity" />
        <activity android:name=".mvp.view.activity.ImageDisplayActivity"
            android:theme="@style/DisplayImageTheme"/>
    </application>

</manifest>